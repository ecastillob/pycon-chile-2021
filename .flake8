[flake8]
max-line-length = 120
max-complexity = 15

# E203: whitespace before ':'
# W503: line break before binary operator
ignore = E203, W503


select = B,C,E,F,W,T4,B9
include = '\.pyi?$'
exclude = '''
/(
    \.git
  | \.hg
  | \.mypy_cache
  | \.tox
  | \.venv
  | _build
  | buck-out
  | build
  | dist
)/
'''
